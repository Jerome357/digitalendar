<form method="post" action="{{ path('event_delete', {'slug': event.slug}) }}"
      onsubmit="return confirm('Etes-vous sûr de supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.slug) }}">
    <button class="btn btn-danger">Delete</button>
</form>


